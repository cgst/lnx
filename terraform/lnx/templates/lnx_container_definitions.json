[
  {
    "name": "bitcoind",
    "image": "kylemanna/bitcoind",
    "memoryReservation": 2048,
    "essential": true,
    "command": [
      "btc_oneshot",
      "-datadir=/bitcoind-data",
      "-txindex=1",
      "-rpcbind",
      "-rpcallowip=0.0.0.0/0",
      "-conf=/bitcoin/.bitcoin/bitcoin.conf",
      "-zmqpubrawblock=tcp://0.0.0.0:28332",
      "-zmqpubrawtx=tcp://0.0.0.0:28332"
    ],
    "environment": [
      {"name": "RPCUSER", "value": "OKToExposeRPCUser"},
      {"name": "RPCPASSWORD", "value": "OKToExposeRPCPassword"}
    ],
    "mountPoints": [
      {
        "sourceVolume": "data-bitcoind",
        "containerPath": "/bitcoind-data"
      }
    ],
    "portMappings": [
      {
        "containerPort": 8332,
        "hostPort": 8332,
        "protocol": "tcp"
      },
      {
        "containerPort": 28332,
        "hostPort": 28332,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${awslogs_region}",
        "awslogs-group": "${awslogs_group}",
        "awslogs-stream-prefix": "bitcoind"
      }
    }
  },
  {
    "name": "lnd",
    "image": "lightninglabs/lnd",
    "memoryReservation": 2048,
    "essential": true,
    "command": [
      "lnd",
      "--listen=0.0.0.0:9735",
      "--rpclisten=0.0.0.0:10009",
      "--maxpendingchannels=1",
      "--alias=${ln_banner}",
      "--color=${ln_color}",
      "--bitcoin.active",
      "--bitcoin.mainnet",
      "--bitcoin.node=bitcoind",
      "--bitcoin.defaultchanconfs=3",
      "--bitcoind.rpchost=bitcoind",
      "--bitcoind.rpcuser=OKToExposeRPCUser",
      "--bitcoind.rpcpass=OKToExposeRPCPassword",
      "--bitcoind.zmqpath=tcp://bitcoind:28332"
    ],
    "environment": [
    ],
    "mountPoints": [
      {
        "sourceVolume": "data-lnd",
        "containerPath": "/root/.lnd/data"
      }
    ],
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 9735,
        "hostPort": 9735
      }
    ],
    "links": [
      "bitcoind:bitcoind"
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${awslogs_region}",
        "awslogs-group": "${awslogs_group}",
        "awslogs-stream-prefix": "lnd"
      }
    }
  }
]